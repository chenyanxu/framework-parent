<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>core-parent</artifactId>
        <groupId>com.kalix.framework.core</groupId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.kalix.framework.core</groupId>
    <artifactId>framework-core-etc</artifactId>
    <description>ETC</description>
    <packaging>pom</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>filter</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>resources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-artifacts</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>target/classes/ConfigCouchdb.cfg</file>
                                    <type>cfg</type>
                                    <classifier>ConfigCouchdb</classifier>
                                </artifact>
                                <artifact>
                                    <file>target/classes/ConfigLogin.cfg</file>
                                    <type>cfg</type>
                                    <classifier>ConfigLogin</classifier>
                                </artifact>
                                <artifact>
                                    <file>target/classes/ConfigRedis.cfg</file>
                                    <type>cfg</type>
                                    <classifier>ConfigRedis</classifier>
                                </artifact>
                                <artifact>
                                    <file>target/classes/ConfigShiro.cfg</file>
                                    <type>cfg</type>
                                    <classifier>ConfigShiro</classifier>
                                </artifact>
                                <artifact>
                                    <file>target/classes/ConfigWebContext.cfg</file>
                                    <type>cfg</type>
                                    <classifier>ConfigWebContext</classifier>
                                </artifact>
                                <artifact>
                                    <file>target/classes/org.ops4j.datasource-kalix.cfg</file>
                                    <type>cfg</type>
                                    <classifier>org.ops4j.datasource-kalix</classifier>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>